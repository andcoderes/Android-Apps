            </intent-filter>
            
        </activity>
        <activity android:clearTaskOnLaunch="true" android:name="com.cl.vestimenta.AgregaRopaActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.cl.vestimenta.AgregaRopaActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
         <activity android:clearTaskOnLaunch="true" android:name="com.cl.vestimenta.AgregarConjunto" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.cl.vestimenta.AgregarConjunto" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
         <activity android:clearTaskOnLaunch="true" android:name="com.cl.vestimenta.CalendarView" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.cl.vestimenta.CalendarView" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
    </application>

