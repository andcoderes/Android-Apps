            android:name="com.cl.vestimenta.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
          <activity android:clearTaskOnLaunch="true" android:name="com.cl.vestimenta.Conjuntos" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.cl.vestimenta.Conjuntos" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
        <activity android:clearTaskOnLaunch="true" android:name="com.cl.vestimenta.Conjunto" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.cl.vestimenta.Conjunto" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
        <activity android:clearTaskOnLaunch="true" android:name="com.cl.vestimenta.AgregarCategoria" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.cl.vestimenta.AgregarCategoria" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
        <activity android:clearTaskOnLaunch="true" 
